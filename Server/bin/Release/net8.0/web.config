<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <security>
      <requestFiltering>
        <!-- Set to 500 MB (in bytes) -->
        <requestLimits maxAllowedContentLength="524288000" maxUrl="524288000" maxQueryString="524288000" />
      </requestFiltering>
    </security>
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
  <system.web>
    <httpRuntime maxRequestLength="512000" executionTimeout="3600" />
  </system.web>
</configuration>